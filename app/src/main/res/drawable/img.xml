<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid
                android:color="@color/cinzinha"></solid>

            <size
                android:width="50dp"
                android:height="50dp"/>

            <stroke
                android:color="@color/cinza"
                android:width="1dp"/>

        </shape>
    </item>

    <item
        android:drawable="@drawable/ic_add_a_photo_black_24dp"
        android:width="35dp"
        android:height="35dp"
        android:gravity="center"/>

</layer-list>