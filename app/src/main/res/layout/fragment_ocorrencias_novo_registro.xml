<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_doenca_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DoenÃ§a"
                android:textColor="@color/preto"
                android:textSize="22sp"/>

                <TextView
                    android:id="@+id/txt_descricao_doenca"
                    android:layout_below="@id/txt_doenca_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/denunciar_doenca"
                    android:textSize="16sp"
                    android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cinzinha" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/txt_foco_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foco"
                android:textColor="@color/preto"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_foco_doenca"
                android:layout_below="@id/txt_foco_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/denunciar_foco"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>