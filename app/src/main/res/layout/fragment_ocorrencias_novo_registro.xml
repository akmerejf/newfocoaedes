<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/NovaOcorrencia">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Nova Denúncia"
            android:layout_marginLeft="20dp"
            android:textColor="@color/branco"
            android:textSize="25sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:id="@+id/novaDoenca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_doenca_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doença"
                android:textColor="@color/preto"
                android:textSize="22sp"/>

                <TextView
                    android:id="@+id/txt_descricao_doenca"
                    android:layout_below="@id/txt_doenca_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/denunciar_doenca"
                    android:textSize="16sp"
                    android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                    android:drawableRight="@drawable/ic_chevron_right_black_24dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cinzinha" />

        <RelativeLayout
            android:id="@+id/novaFoco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true">
            <TextView
                android:id="@+id/txt_foco_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foco"
                android:textColor="@color/preto"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txt_foco_descricao"
                android:layout_below="@id/txt_foco_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/denunciar_foco"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp" />
        </RelativeLayout>
</LinearLayout>