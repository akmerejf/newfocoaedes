<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/branco"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:padding="5dp"
    tools:ignore="RtlSymmetry">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/principal_lista_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="5dp"
            android:scaleType="fitXY"
            app:riv_corner_radius="15dp"
            android:src="@mipmap/luffy"/>

        <TextView
            android:id="@+id/principal_lista_titulo"
            android:layout_toRightOf="@id/principal_lista_img"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foco na minha rua"
            android:textStyle="bold"
            android:textColor="#000000"
            android:maxLines="2"
            android:layout_toLeftOf="@id/data"/>
        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/05/2018"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/endereco"
            android:layout_below="@id/principal_lista_titulo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:maxLines="1"
            android:layout_toRightOf="@id/principal_lista_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travessa Rui Barbosa, 2108 - Reduto"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>